<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/log_back"

    android:orientation="vertical"
    tools:context="com.example.zhangxinfang.bbchat.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="#ffffff"
            android:text="登录"
            android:textSize="20dp"
            android:gravity="center"
            android:background="#e38b97c1"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="156dp">

        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="帐号"
            android:maxLength="11"
            android:numeric="integer"
            android:textColorHint="#e5deec"


            />

        <EditText
            android:id="@+id/password"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="密码"
            android:maxLength="16"
            android:textColorHint="#e5deec"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_turn_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0000"
                android:text="注册"
                android:textColor="#404b6f"
                android:gravity="left|center"/>
            <Button
                android:id="@+id/btn_turn_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0000"
                android:text="忘记密码"
                android:textColor="#404b6f"
                android:gravity="right|center"/>


        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="登录"
            android:background="#e1d8cfef"
            android:textColor="#8b97c1"
            android:textSize="20dp"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>